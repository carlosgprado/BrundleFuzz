// Define structures used in MOBI files

typedef struct {    // Record Info ri
    DWORD   dataOffset;
    UBYTE   attributeBits;
    UBYTE   uid1;
    WORD    uid2;
} ri;

void checkpdfheader()
{
  // Check for correct header
  if ( ( type != "BOOK" || creator != "MOBI")
     &&( type != "TEXt" || creator != "REAd") )
  {
      Warning( "File is not BOOKMOBI or TEXtREAd. Template stopped." );
      return -1;
  }
}

