typedef struct {   //EXTH Header
    CHAR    identifier[4]; //EXTH
    DWORD   headerLength;
    UINT    recordCount;
    local int i = 0;
    for ( i = 0; i < recordCount; i++) {
      EXTHrecord exthrecord;
    }
} ExthHeader;

